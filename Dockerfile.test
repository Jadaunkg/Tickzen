FROM python:3.11-slim

WORKDIR /app

# Install minimal dependencies
RUN pip install --no-cache-dir flask gunicorn

# Create a simple test app
RUN echo 'from flask import Flask\napp = Flask(__name__)\n\n@app.route("/")\ndef home():\n    return "Flask is running!"\n\n@app.route("/health")\ndef health():\n    return {"status": "healthy"}\n\nif __name__ == "__main__":\n    app.run(host="0.0.0.0", port=8080)' > test_app.py

ENV PORT=8080
EXPOSE 8080

CMD exec gunicorn --bind :$PORT --workers 1 --threads 2 --timeout 0 test_app:app
